.e-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: white;
}

.e-grid-item {
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}

.e-grid-right {
  border-right: none;
}

.e-grid-bottom {
  border-bottom: none;
}

.e-grid-item-wrapper {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.e-grid-icon-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.e-grid-icon {
  flex: 1;
  width: 36px;
  height: 36px;
}

.e-grid-text {
  color: #333;
  font-size: 14px;
  line-height: 1;
  margin-top: 14px;
}

.e-grid-2 {
  padding-left: 15px;
  padding-right: 15px;
}

.e-grid-3 {
  padding: 15px;
}
.e-grid-no-line .e-grid-item,
.e-grid-5 .e-grid-item,
.e-grid-4 .e-grid-item {
  border-right: none;
  border-bottom: none;
}
.e-grid-2 .e-grid-item-wrapper {
  flex-direction: row;
  justify-content: flex-start;
}

.e-grid-4 .e-grid-icon-container.circular {
  padding: 9px;
  border-radius: 50%;
  background-color: #D8D8D8;
}

.e-grid-2 .e-grid-icon {
  margin-left: 20px;
}

.e-grid-4 .circular .e-grid-icon {
  flex: 1;
}

.e-grid-5 .e-grid-icon {
  border-radius: 50%;
  width: 43px;
  height: 43px;
}

.e-grid-2 .e-grid-text {
  margin-top: 0;
  margin-left: 20px;
}
.e-grid-4 .e-grid-text {
  font-size: 13px;
}
.e-grid-5 .e-grid-text {
  font-size: 12px;
  margin-top: 6px;
}
