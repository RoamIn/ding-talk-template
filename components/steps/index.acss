/* horizontal steps style */
.e-hor-steps {
  padding: 20px 50px 10px 50px;
  background-color: #fff;
  overflow: hidden;
  white-space: nowrap;
}
.e-hor-step {
  display: inline-block;
  white-space: normal;
  text-align: center;
  vertical-align: top;
}
.e-hor-step-line {
  position: relative;
  margin: 6px 0; 
  height: 2px;
  background-color: #ccc;
}
.e-hor-step-line.is-active {
  background-color: #108ee9;
}
.e-hor-step-line.is-last {
  background-color: transparent;
}
.e-hor-step-icon {
  position: absolute;
  top: 50%;
  left: 0;
  width: 10px;
  height: 10px;
  transform: translate(-50%, -50%);
  border-radius: 999px; 
  background-color: #ccc;
}
.e-hor-step-icon.is-active {
  background-color: #108ee9;
}
.e-hor-step-text {
  margin-top: 20px;
  padding: 0 5px;
  transform: translateX(-50%);
}
.e-hor-step-title {
  font-size: 12px;
  color: #333;
}
.e-hor-step-description {
  margin-top: 6px;
  font-size: 12px;
  color: #999;
}

/* vertical steps style */
.e-vertical-steps {
  padding: 20px 30px 0 30px;
  background-color: #fff;
}
.e-vertical-step {
  display: flex;
}
.e-vertical-step-left {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20px;
  margin-right: 20px;
}
/* line 包含 top 和 bottom 两块， 整体下移20px, 保证和原点无缝衔接 */
.e-vertical-step-line {
  position: relative;
  top: 10px;
  width: 2px;
  background-color: #ccc;
}
.e-vertical-step-line-top {
  flex: 1;
}
/* 60px 是 e-vertical-step-text的margin-bottom的40px加上line的下移20px，保证line-top底部和右侧文字底布对齐*/
.e-vertical-step-line-bottom {
  height: 30px;
  width: 2px;
  background-color: #ccc;
}
.e-vertical-step-line.is-active {
  background-color: #108ee9;
}
.e-vertical-step-icon {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 999px;
}
.e-vertical-step-icon.is-normal {
  top: 5px;
  background-color: #ccc;
  width: 10px;
  height: 10px;
}
.e-vertical-step-icon.is-active,
.e-vertical-step-icon.is-fail {
  width: 20px;
  height: 20px;
  background-color: #fff;
}
.e-vertical-step-right {
  flex: 1;
  margin-bottom: 20px;
}
.e-vertical-step-title {
  margin-bottom: 4px;
  font-size: 17px;
  color: #333;
}
.e-vertical-step-title.is-active {
  color: #108ee9;
}
.e-vertical-step-title.is-fail {
  color: #F4333C;
}
.e-vertical-step-description {
  font-size: 14px;
  color: #888;
}
.e-vertical-placeholder {
  height: 20px;
}
.e-vertical-placeholder-line {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  width: 2px;
  background-color: #ccc;
}